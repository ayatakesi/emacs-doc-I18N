msgstr ""

#. type: item
#: ../../../../../doc/misc/reftex.texi:4562
#, no-wrap
msgid "%a"
msgstr ""

#. type: table
#: ../../../../../doc/misc/reftex.texi:4564
msgid "List of author names, see also @code{reftex-cite-punctuation}."
msgstr ""

#. type: item
#: ../../../../../doc/misc/reftex.texi:4564
#, no-wrap
msgid "%2a"
msgstr ""

#. type: table
#: ../../../../../doc/misc/reftex.texi:4566
msgid "Like %a, but abbreviate more than 2 authors like Jones et al."
msgstr ""

#. type: item
#: ../../../../../doc/misc/reftex.texi:4566
#, no-wrap
