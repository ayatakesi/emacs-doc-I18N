#. type: table
#: ../../../../../doc/misc/message.texi:1814
msgid "This will send the message via @samp{smtp.fsf.org}, using port 587."
msgstr ""

#. type: example
#: ../../../../../doc/misc/message.texi:1817
#, no-wrap
msgid "X-Message-SMTP-Method: smtp smtp.fsf.org 587 other-user\n"
msgstr ""

#. type: table
#: ../../../../../doc/misc/message.texi:1822
msgid "This is the same as the above, but uses @samp{other-user} as the user name when authenticating.  This is handy if you have several @acronym{SMTP} accounts on the same server."
