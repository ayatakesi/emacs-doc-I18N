#. type: subsection
#: ../../calc.texi:6573
#, no-wrap
msgid "Algebraic Entry Tutorial Exercise 1"
msgstr ""

#. type: Plain text
#: ../../calc.texi:6577
msgid "Type @kbd{' sqrt($) @key{RET}}."
msgstr ""

#. type: Plain text
#: ../../calc.texi:6580
msgid ""
