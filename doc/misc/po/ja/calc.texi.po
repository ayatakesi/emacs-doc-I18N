#, no-wrap
msgid ""
"1:  [6, 10]    2:  [6, 10]         1:  [4 a / (a - b) + 6, 4 / (b - a) ]\n"
"    .          1:  [ [ 1, a ]          .\n"
"                     [ 1, b ] ]\n"
"                   .\n"
"\n"
