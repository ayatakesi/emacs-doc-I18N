#: ../../calc.texi:12880
#, no-wrap
msgid "matrix"
msgstr ""

#. type: table
#: ../../calc.texi:12882
msgid "The value is a matrix (a rectangular vector of vectors)."
msgstr ""

#. type: item
#: ../../calc.texi:12882
